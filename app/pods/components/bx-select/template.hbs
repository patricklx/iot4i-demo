{{#if multiple}}
  <PowerSelectMultiple
    @options={{options}}
      @onfocus={{action "selectFocused"}}
    @searchField={{searchField}}
      @selected={{content}}
    @placeholder={{placeholder}}
      @onchange={{action 'onChange'}}
    @onkeydown={{action 'handleKeydown'}}
  as |option select|
  >
    {{#if hasBlock}}
      <div class='bx--grid'>
        <div class='bx--row'>
          <div class='bx--col-xs-1'>
            <BxCheckbox @onclick='return false;' @readonly='true' @checked={{ember-power-select-is-selected option select.selected}} />
          </div>
          <div class='bx--col-xs'>
            {{yield option}}
          </div>
        </div>
      </div>
    {{else}}
      <div class='bx--grid'>
        <div class='bx--row'>
          <div class='bx--col-xs-1'>
            <BxCheckbox @onclick='return false;' @readonly='true' @checked={{ember-power-select-is-selected option select.selected}} />
          </div>
          <div class='bx--col-xs'>
            {{option}}
          </div>
        </div>
      </div>
    {{/if}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect
    @options={{options}}
      @onfocus={{action "selectFocused"}}
    @searchField={{searchField}}
      @selected={{content}}
    @placeholder={{placeholder}}
      @onchange={{action 'onChange'}}
  as |option|>
    {{#if hasBlock}}
      {{yield option}}
    {{else}}
      {{option}}
    {{/if}}
  </PowerSelect>
{{/if}}
