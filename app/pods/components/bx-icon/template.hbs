{{#if loading}}
  <BxLoading @small="true"/>
{{else}}
  <span style="{{if attrs.onClick 'cursor: pointer'}}"
       onclick={{action 'onClick'}}
       class="bx--btn__icon" >
  <svg class="{{bxClassNames}} {{styleNamespace}}"
  width="{{default-to size svg.width}}"
  height="{{default-to size  svg.height}}"
  viewBox="{{svg.viewBox}}"
  xmlns="http://www.w3.org/2000/svg">
    {{#each svg.svgData.circles as |c|}}
      <circle r='{{c.r}}'></circle>
    {{/each}}
    {{#each svg.svgData.ellipses as |e|}}
      <ellipse rx='{{c.rx}}' ry='{{c.ry}}'></ellipse>
    {{/each}}
    {{#each svg.svgData.polygons as |p|}}
      <polygon points='{{p.points}}'></polygon>
    {{/each}}
    {{#each svg.svgData.paths as |p|}}
      <path d="{{p.d}}" fill-rule="{{get p 'fill-rule'}}"></path>
    {{/each}}
  </svg>
  </span>
{{/if}}