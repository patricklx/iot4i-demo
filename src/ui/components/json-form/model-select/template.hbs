<BxSelect
  @placeholder="{{field.placeholder}}"
  @multiple={{true}}
    @content={{currentValue}}
  @removeItem={{action "removeModel"}}
    @addItem={{action "addModel"}}
  @searchField={{field.searchField}}
  @onfocus={{action "selectFocused"}}
    @options={{modelArray}} as |model|>
  {{get model field.modelLabel}}
  {{#if field.description}}
    <br> <small>{{default-to (get model field.description) 'no description'}}</small>
  {{/if}}
</BxSelect>