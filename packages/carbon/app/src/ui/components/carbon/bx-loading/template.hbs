{{#if overlay}}
  <div class="bx--loading-overlay" id='{{uuid}}'>
  <div data-loading class="bx--loading {{if small 'bx--loading--small'}}">
    <svg class="bx--loading__svg" viewBox="-75 -75 150 150">
      <title>Loading</title>
      <circle cx="0" cy="0" r="37.5" />
    </svg>
  </div>
</div>
{{else}}
  <div data-loading class="bx--loading {{if small 'bx--loading--small'}}" id='{{uuid}}'>
    <svg class="bx--loading__svg" viewBox="-75 -75 150 150">
      <title>Loading</title>
      <circle cx="0" cy="0" r="37.5" />
    </svg>
  </div>
{{/if}}
